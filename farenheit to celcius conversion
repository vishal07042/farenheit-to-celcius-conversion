#include <stdio.h>

int main() {
  int fahrenit;
    printf("Enter the value of temp in fahrenite ");
   scanf("%i",&fahrenit);
//   c=(f-32)*5/9 formula for conversion of fahrenit to celsius

    int celsius=(fahrenit-32)*5/9;
    
//    dont change int else you will get random values with ** used on gcc compiler //results may varies with pc configuration and
//pc's architure // warning please remove above comment before final submission;

//and this on your own risk

